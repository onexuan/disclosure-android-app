<resources>

  <!-- Base application theme. -->
  <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/color_grey_light</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
  </style>

  <style name="AppTheme" parent="BaseAppTheme">
    <item name="android:windowBackground">@color/background</item>
    <item name="windowActionModeOverlay">true</item>
  </style>

  <style name="AppTheme.SearchActivity" parent="BaseAppTheme">
    <item name="android:windowBackground">@color/transparent</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>

  <style name="TabLayout" parent="Widget.Design.TabLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:fillViewport">false</item>
    <item name="tabBackground">@color/tabs_background_light</item>
    <item name="android:background">@color/tabs_background_light</item>
    <item name="tabGravity">fill</item>
    <item name="tabIndicatorHeight">3dp</item>
    <item name="tabMode">fixed</item>
    <item name="tabMaxWidth">2048dp</item>
    <item name="tabSelectedTextColor">?colorAccent</item>
  </style>

  <style name="PermissionGroupDangerous" parent="TagGroup">
    <item name="atg_borderColor">@color/colorPrimaryDark</item>
    <item name="atg_backgroundColor">@color/color_purple</item>
    <item name="atg_textColor">@color/color_white_light</item>
    <item name="atg_checkedBorderColor">@color/color_grey_dark</item>
    <item name="atg_checkedBackgroundColor">@color/color_grey_dark</item>
  </style>

  <style name="PermissionGroupNormal" parent="TagGroup">
    <item name="atg_borderColor">@color/color_grey_dark</item>
    <item name="atg_backgroundColor">@color/color_grey_dark</item>
    <item name="atg_textColor">@color/color_white_light</item>
  </style>

</resources>
