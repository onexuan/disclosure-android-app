<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.philipphager.disclosure">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

  <application
      android:name=".DisclosureApp"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      android:usesCleartextTraffic="false">

    <activity
        android:name=".feature.home.HomeActivity"
        android:launchMode="singleTop">

      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name=".feature.app.detail.DetailActivity"
        android:parentActivityName=".feature.home.HomeActivity"
        android:launchMode="standard">
    </activity>

    <activity
        android:name=".feature.library.detail.LibraryOverviewActivity"
        android:parentActivityName=".feature.home.HomeActivity"
        android:launchMode="standard">
    </activity>

    <receiver android:name=".feature.sync.db.broadcasts.PackageManagerBroadcastReceiver">
      <intent-filter>
        <action android:name="android.intent.action.PACKAGE_ADDED"/>
        <action android:name="android.intent.action.PACKAGE_CHANGED"/>
        <action android:name="android.intent.action.PACKAGE_REMOVED"/>
        <data android:scheme="package"/>
      </intent-filter>
    </receiver>
  </application>
</manifest>
